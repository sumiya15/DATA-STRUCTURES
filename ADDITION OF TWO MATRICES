#include <stdio.h>
int main()
{
  int row, col, i, j;
  int mat1[10][10], mat2[10][10], sum[10][10];
  printf("Enter the number of rows and columns: ");
  scanf("%d %d", &row, &col);
  printf("Enter elements of matrix 1:\n");
  for(i=0; i<row; i++)
    for(j=0; j<col; j++)
        scanf("%d", &mat1[i][j]);
    printf("Enter elements of matrix 2:\n");
  for(i=0; i<row; i++)
    for(j=0; j<col; j++)
        scanf("%d", &mat2[i][j]);
    for(i=0; i<row; i++)
        for(j=0; j<col; j++)
            sum[i][j] = mat1[i][j] + mat2[i][j];
printf("Sum of the matrices:\n");
  for(i=0; i<row; i++)
   {
    for(j=0; j<col; j++)
        printf("%d\t", sum[i][j]);
        printf("\n");
    }
  return 0;
}
